
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Libros</h2>
<a class="btn btn-primary form-group" href="@Url.Action("Agregar","Libros")">Agregar Libros</a>
<a class="btn btn-primary form-group" href="@Url.Action("Agregar","Autores")">Agregar Autor</a>

<table class="table">
    <tr>
        <th>Id Libro</th>
        <th>Título</th>
        <th>Autor</th>
    </tr>
    @foreach (var libro in Model)
    {
        <tr>
            <td>@libro.Id</td>
            <td>@libro.Titulo</td>
            <td>@libro.Autor.Nombre</td>
        </tr>
    }
</table>

