    
@{
    ViewData["Title"] = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center">Registro de Autor</h2>
    <form action="@Url.Action("Agregar", "Autores")" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group col-5 offset-md-2 mt-3">
            <label class="mb-2 " for="nombre">Nombre del Autor:</label>
            <input placeholder="Escriba el Nombre del Autor" type="text" class="form-control " id="nombre" name="nombre" required pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+">
            <button type="submit" class="btn btn-success mb-2 mt-2 ">
                Registrar Autor
            </button>
            <div>
                @Html.ActionLink("Volver a la Lista", "Index")
            </div>
        </div>
     
    </form>
</div>




@section Scripts{

    @{
        var errorMessage = TempData["MessageError"] as string;
        var successMessage = TempData["SuccessMessage"] as string;

    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <script>
            $(document).ready(function () {            
                    Swal.fire({
                        title: "Error al Guardar",
                        text: "@errorMessage",
                        icon: "error"
                    });
            });
        </script>
    }    
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    title: "Éxito",
                    text: "@successMessage",
                    icon: "success"
                });
            });
        </script>
    }


}

